from langchain.chains import LLMChain
from langchain_core.prompts import ChatPromptTemplate

memory_steward_prompt = ChatPromptTemplate.from_template(
    """You are a Memory Steward...
    (paste the master prompt here, shortened if needed)
    Conversation:
    {conversation_chunk}
    """
)

memory_steward_chain = LLMChain(
    llm=llm,
    prompt=memory_steward_prompt
)